<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BeatGame.Management"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.BeatGame.Manager.SetupManager"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.BeatGame.Manager.GameManager"
            android:label="@string/title_activity_game_manager"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.BeatGame.Manager.PauseActivity"
            android:label="@string/title_activity_game_manager"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.BeatGame.Manager.AddUserActivity"
            android:label="@string/title_activity_game_manager"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.BeatGame.Manager.ScoreBoardActivity"
            android:label="@string/title_activity_game_manager"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Transparent" >
        </activity>
    </application>

</manifest>